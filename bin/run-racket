#! /bin/sh
PROGRAM=`echo $0 | sed 's%.*/%%'`
PROGDIR="$(cd `dirname $0`; echo $PWD)"

if [ ! -z "$ZSH_VERSION" ]; then
  setopt shwordsplit
fi

RACKET="${RACKET:-env racket}"
RACKET_PACKAGES="racket/base racket/list racket/fixnum racket/flonum racket/unsafe/ops racket/mpair compatibility/mlist"
if [ $# -lt 2 ]; then
    echo "No."
    exit -1
fi

VARIABLE=$1
shift
BENCHMARK=$1
shift

if egrep -q 'set-c[ad]r!' src/${BENCHMARK}.scm ; then
    EXTRA_ARG="--mcons"
fi

exec $RACKET -n -l "racket/base" -e "(require (for-syntax racket/base))" \
     ${RACKET_ARGS} -e "(require $RACKET_PACKAGES)" \
     "$@" -r benchmark.rkt $EXTRA_ARG $VARIABLE $BENCHMARK
